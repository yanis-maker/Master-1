<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_height="160dp"
    android:layout_width="wrap_content"
    android:backgroundTint="@color/lightGrey"
    app:cardCornerRadius="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNCF"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/beautyBlack"
            android:textFontWeight="900"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="150â‚¬"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/beautyBlack"
            android:textColor="@color/lightGrey"
            android:textFontWeight="900"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_hStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textColor="@color/beautyBlack"
                android:textFontWeight="900"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/card_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:textColor="@color/beautyBlack"
                android:textFontWeight="400"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:layout_gravity="center"
                />


        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="3dp"
            android:layout_centerInParent="true"
            android:background="@color/beautyBlack"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_hFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textColor="@color/beautyBlack"
                android:textFontWeight="900"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/card_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lyon"
                android:textColor="@color/beautyBlack"
                android:textFontWeight="400"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>